
@{
    ViewData["Title"] = "SearchResults";

}

<h1>Search Results</h1>

<div class="col-sm-12">
   
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Make</th>
                <th>Model</th>
                <th>Year</th>
                <th>Price</th>
                <th>Miles</th>
                <th>Color</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in @Model)
            {
                <tr>
                    <td>@car.Id.ToString()</td>
                    <td>@car.Make</td>
                    <td>@car.Model</td>
                    <td>@car.Year</td>
                    <td>$@car.Price.00</td>
                    <td>@car.Mileage</td>
                    <td>@car.Color</td>
                    <td>
                        <a class="btn btn-secondary" asp-controller="Car" asp-action="Detail"
                           asp-route-id="@car.Id">View</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>


</div>

